{
  "name": "mysql-client",
  "version": "1.0.0",
  "description": "A modern MySQL client built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac-unsigned": "electron-builder --mac --publish=never",
    "build:mac-signed": "electron-builder --mac --publish=never --sign",
    "build:win": "electron-builder --win",
    "build:win-unsigned": "electron-builder --win --publish=never",
    "build:linux": "electron-builder --linux",
    "build:linux-unsigned": "electron-builder --linux --publish=never",
    "dist": "electron-builder --publish=never",
    "dist:mac": "electron-builder --mac --publish=never",
    "dist:win": "electron-builder --win --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "pack": "electron-builder --dir",
    "pack:mac": "electron-builder --mac --dir",
    "pack:win": "electron-builder --win --dir",
    "pack:linux": "electron-builder --linux --dir"
  },
  "keywords": [
    "electron",
    "mysql",
    "database",
    "client",
    "desktop",
    "mac",
    "windows",
    "linux"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "mysql2": "^3.14.1"
  },
  "build": {
    "appId": "com.yourcompany.mysqlclient",
    "productName": "db-client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!*.md",
      "!run-app.sh",
      "!scripts/**/*"
    ],
    "asar": false,
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "db-client",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
