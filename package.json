{
  "name": "mac-desktop-system",
  "version": "1.0.0",
  "description": "A modern mysql client built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "desktop",
    "mac",
    "system"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "mysql2": "^3.14.1"
  },
  "build": {
    "appId": "com.yourcompany.macdesktop",
    "productName": "mysql-client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asar": false,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    }
  }
}
